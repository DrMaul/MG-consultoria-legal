---
const {name, description,icon: IconComponent, asunto, mensaje} = Astro.props
import Button from "../components/Button.astro"
---

<div class="border border-blue-950/10  rounded-lg shadow  hover:bg-yellow-200/10 transition">
    <div class="flex flex-col items-center py-5 px-2">
        <IconComponent class="size-10" stroke="#172554"/>
        <h4 class="mb-1 text-xl text-blue-950 font-medium text-center">{name}</h4>
        <p class="ms-2 text-center text-blue-950 text-xs font-light opacity-80">{description}</p> 
        <Button href={`mailto:agusfmartinez@outlook.com?subject=${encodeURIComponent(asunto)}&body=${encodeURIComponent(mensaje)}`}>
            Consultar Servicio
        </Button>
    </div>
</div>